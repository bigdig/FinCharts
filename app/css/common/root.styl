html
    box-sizing border-box

body
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;

svg
    width 100%
    height 100%

*, *:before, *:after
    box-sizing inherit

.clearfix:before,
.clearfix:after
    content " "
    display table

.clearfix:after
    clear both

.hide
    display none
