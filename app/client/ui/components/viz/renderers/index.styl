.pricechart
    .candles
        stroke-width 1px
        stroke candle-stroke-color

        .up
            fill candle-up-color

        .down
            fill candle-down-color

    .ohlcbars,
    .hlcbars
        stroke-width 2.5
        stroke-linecap round
        stroke-linejoin round

        &.thick
            stroke-width 3.5

        .up
            stroke ohlc-up-color

        .down
            stroke ohlc-down-color

    .line
        path
          fill: none;
          stroke-width: 1.5px;

          &.up
            stroke ohlc-up-color

          &.down
            stroke ohlc-down-color

    .area
        .line-path
          fill: none;
          stroke-width: 1.5px;

          &.up
            stroke area-up-stroke

          &.down
            stroke area-down-stroke

        .area-path
          fill: none;
          stroke-width: 0;
          fill-opacity: 0.65;

          &.up
            fill area-up-fill

          &.down
            fill area-down-fill
